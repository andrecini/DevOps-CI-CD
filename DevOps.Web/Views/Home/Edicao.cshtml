@model Usuario

<div class="container">
    <h2>Edição de Usuário</h2>
    <form asp-action="Editar" asp-controller="Home">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label for="inputNome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="inputNome" name="Nome" value="@Model.Nome" placeholder="Digite o nome" required>
        </div>
        <div class="mb-3">
            <label for="inputSobrenome" class="form-label">Sobrenome</label>
            <input type="text" class="form-control" id="inputSobrenome" name="Sobrenome" value="@Model.Sobrenome" placeholder="Digite o sobrenome" required>
        </div>
        <div class="mb-3">
            <label for="inputIdade" class="form-label">Idade</label>
            <input type="number" class="form-control" id="inputIdade" name="Idade" value="@Model.Idade" placeholder="Digite a idade" required>
        </div>
        <div class="mb-3">
            <label for="inputGenero" class="form-label">Gênero</label>
            <select class="form-select" id="selectGenero" name="Genero" required>
                <option>Selecione uma opção</option>
                <option value="Masculino">Masculino</option>
                <option value="Feminino">Feminino</option>
                <option value="Outro">Outro</option>
            </select>
        </div>
        <div class="d-flex justify-content-end w-100">
            <button type="reset" class="btn btn-secondary">Limpar</button>
            <button type="submit" class="btn btn-success ms-2">Atualizar</button>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $("#selectGenero").find("option[value='" + `@(Model.Genero)` + "']").prop("selected", true);
</script>